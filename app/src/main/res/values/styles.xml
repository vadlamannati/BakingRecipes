<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--Own styles-->
    <style name="tripleMargin">
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:layout_marginRight">@dimen/margin_right</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>

    </style>

    <style name="CardViewStyle" parent="tripleMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/cardViewColor</item>
        <item name="cardCornerRadius">@dimen/card_view_corner_radius</item>
        <item name="cardElevation">@dimen/card_view_elevation</item>
    </style>

    <style name="HeadTextStyle" parent="tripleMargin">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:color">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="SubHeadTextStyle" parent="tripleMargin">
        <item name="android:textSize">@dimen/sub_head_text_size</item>
        <item name="android:color">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="SideHeadTextStyle" parent="tripleMargin">
        <item name="android:textSize">@dimen/side_head_text_size</item>
        <item name="android:color">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="ParagraghTextStyle" parent="tripleMargin">
        <item name="android:textSize">@dimen/paragraph_text_size</item>
        <item name="android:color">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="RecipeDetailsTextStyle" parent="ParagraghTextStyle">
        <item name="android:padding">@dimen/view_border_padding</item>
    </style>

    <style name="StepsTextStyle" parent="tripleMargin">
        <item name="android:textSize">@dimen/side_head_text_size</item>
        <item name="android:color">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

</resources>
